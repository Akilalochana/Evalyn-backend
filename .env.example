# ============================================
# Evalyn HR Automation Agent - Configuration
# Copy this file to .env and fill in your values
# ============================================

# Application Settings
APP_NAME="Evalyn HR Automation Agent"
DEBUG=true

# ============================================
# DATABASE - NeonDB PostgreSQL
# ============================================
# Get your connection string from: https://console.neon.tech/
# Format: postgresql://user:password@host/database?sslmode=require
DATABASE_URL=postgresql://user:password@ep-xxx.region.aws.neon.tech/neondb?sslmode=require

# ============================================
# GOOGLE GEMINI AI (Free Tier)
# ============================================
# Get your API key from: https://aistudio.google.com/app/apikey
GEMINI_API_KEY=your_gemini_api_key_here
GEMINI_MODEL=gemini-1.5-flash

# ============================================
# VERCEL BLOB STORAGE (For PDF/Resume Storage)
# ============================================
# Get these from: Vercel Dashboard > Storage > Blob
VERCEL_BLOB_READ_WRITE_TOKEN=vercel_blob_rw_xxxxxxxxxxxx
VERCEL_BLOB_STORE_ID=store_xxxxxxxxxxxxx
VERCEL_BLOB_BASE_URL=https://your-store.public.blob.vercel-storage.com

# ============================================
# EMAIL CONFIGURATION (Gmail SMTP)
# ============================================
# For Gmail, use an App Password: 
# 1. Enable 2FA on your Google Account
# 2. Go to https://myaccount.google.com/apppasswords
# 3. Generate an App Password for "Mail"
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_app_password_here
EMAIL_FROM=hr@yourcompany.com

# ============================================
# COMPANY INFORMATION
# ============================================
COMPANY_NAME=Your Company Name
CAREERS_PAGE_URL=https://yourcompany.com/careers

# ============================================
# AI AGENT SETTINGS
# ============================================
# Number of top candidates to shortlist
CV_SCREENING_TOP_CANDIDATES=10

# Minimum score (%) for automatic selection
# Candidates with this score or above are shortlisted
MINIMUM_MATCH_SCORE=75.0

# ============================================
# SSE (INTERVIEWER) DEFAULT SETTINGS
# ============================================
# Default interviewer for Round 2 interviews
DEFAULT_SSE_NAME=Senior Software Engineer
DEFAULT_SSE_EMAIL=sse@yourcompany.com

# Interview duration in minutes
INTERVIEW_DURATION_MINUTES=60

# Gap between interviews in minutes
INTERVIEW_GAP_MINUTES=30
